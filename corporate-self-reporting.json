{
  "_id": "corporate-self-reporting",
  "formCategory": "hmrcReturnForm",
  "formName": "Corporate self reporting",
  "description": "",
  "dmsSubmission": {
    "dmsFormId": "CSR",
    "customerId": "${auth.payenino}",
    "classificationType": "BT-NRU-Environmental",
    "businessArea": "FinanceOpsCorpT"
  },
  "authConfig": {
    "authModule": "hmrc"
  },
  "emailTemplateId": "eeitt_submission_confirmation",
  "submitSuccessUrl": "http://www.google.co.uk",
  "submitErrorUrl": "http://www.yahoo.co.uk",
  "sections": [
    {
      "title": "Your details",
      "fields": [
        {
          "id": "firstNameBusiness",
          "type": "text",
          "label": "First name",
          "shortName": "First name",
          "mandatory": "true",
          "errorMessage": "Enter your first name"
        },
        {
          "id": "lastNameBusiness",
          "type": "text",
          "label": "Last name",
          "shortName": "Last name",
          "mandatory": "true",
          "errorMessage": "Enter your last name"
        },
        {
          "id": "connectionToBusiness",
          "type": "text",
          "label": "Connection to the company or partnership",
          "mandatory": "true"
        },
        {
          "id": "agentTelephone",
          "type": "text",
          "label": "Telephone number",
          "shortName": "Telephone number",
          "helpText": "Include area and country codes for UK landlines and overseas numbers.",
          "format": "telephoneNumber",
          "mandatory": "true"
        },
        {
          "id": "emailAgent",
          "type": "text",
          "label": "Email address",
          "shortName": "Email address",
          "format": "email",
          "mandatory": "true"
        },
        {
          "id": "userAddress",
          "type": "address",
          "label": "Address",
          "postcodeLookup": "no"
        }
      ]
    },
    {
      "title": "About the company or partnership",
      "fields": [
        {
          "id": "companyRegUK",
          "type": "choice",
          "label": "Is the company or partnership registered in the UK?",
          "format": "yesno"
        }
      ]
    },
    {
      "title": "Enter the details of the company or partnership",
      "includeIf": "${companyRegUK=0}",
      "fields": [
        {
          "id": "legalNameUK",
          "type": "text",
          "label": "Legal name",
          "mandatory": "true",
          "helpText": "Enter the name as it is registered at Companies House"
        },
        {
          "id": "tradingNameUK",
          "type": "text",
          "label": "Trading name (optional)",
          "mandatory": "false",
          "helpText": "Enter the trading name if it is different from the legal name"
        },
        {
          "id": "ukBaseAddress",
          "type": "address",
          "label": "Address",
          "helpText": "Enter the address as it is registered at Companies House",
          "postcodeLookup": "no"
        },
        {
          "id": "companyRegNumber",
          "type": "text",
          "label": "Company Registration Number",
          "mandatory": "true",
          "helpText": "This is issued by Companies House and consists of 8 numbers, or 2 letters followed by 6 numbers"
        },
        {
          "id": "companyUniqueTaxRefNum",
          "type": "text",
          "label": "Company Unique Tax Reference number (optional)",
          "mandatory": "false",
          "helpText": "This is a 10 digit number, for example 123456789. It can be found on documents HMRC has issued"
        }
      ]
    },
    {
      "title": "About the company or partnership",
      "includeIf": "${companyRegUK=1}",
      "fields": [
        {
          "id": "legalName",
          "type": "text",
          "label": "Legal name",
          "mandatory": "true",
          "helpText": "Enter the name as it is registered at Companies House"
        },
        {
          "id": "tradingName",
          "type": "text",
          "label": "Trading name (optional)",
          "mandatory": "false",
          "helpText": "Enter the trading name if it is different from the legal name"
        },
        {
          "id": "baseAddress",
          "type": "address",
          "label": "Address",
          "postcodeLookup": "no"
        },
        {
          "id": "formedCountry",
          "type": "text",
          "label": "Country where the company was formed",
          "mandatory": "true"
        },
        {
          "id": "companyRegNumberInternational",
          "type": "text",
          "label": "Company Registration Number (if applicable)",
          "mandatory": "false"
        }
      ]
    },
    {
      "title": "Tell us what happened",
      "description": "Use this section of the form to explain how the criminal facilitation of tax evasion took place.",
      "fields": [
        {
          "id": "importantLegalText",
          "type": "info",
          "label": "",
          "infoText": "For the facilitation of tax evasion to be a criminal act, a person must have deliberately and dishonestly helped another person to evade tax. This doesn’t include the accidental, ignorant or negligent facilitation of tax evasion.",
          "infoType": "important"
        },
        {
          "id": "summariseHowTax",
          "type": "text",
          "multiline": "true",
          "label": "Summarise how the tax evasion was facilitated",
          "mandatory": "true"
        },
        {
          "id": "howItWasDiscovered",
          "type": "text",
          "multiline": "true",
          "label": "How was it discovered?",
          "mandatory": "true"
        },
        {
          "id": "whatCapacity",
          "type": "text",
          "multiline": "true",
          "label": "In what capacity was the person responsible acting?",
          "mandatory": "true"
        },
        {
          "id": "anyOtherInfo",
          "type": "text",
          "multiline": "true",
          "label": "Any other information you feel may be relevant",
          "mandatory": "true"
        }
      ]
    },
    {
      "title": "Other reports",
      "fields": [
        {
          "id": "madeOtherReports",
          "type": "choice",
          "label": "Have you made any other report, such as a Suspicious Activity Report to any other body or agency?",
          "choices": [
            "Yes",
            "No",
            "I don't know"
          ]
        }
      ]
    },
    {
      "title": "Other reports",
      "includeIf": "${madeOtherReports=0}",
      "fields": [
        {
          "id": "whoYouHaveInformed",
          "type": "text",
          "multiline": "true",
          "label": "Tell us who you’ve informed about the tax evasion",
          "mandatory": "true"
        },
        {
          "id": "referenceNumbersAssociated",
          "type": "text",
          "label": "Enter any reference numbers associated with these reports (optional)",
          "mandatory": "false"
        }
      ]
    },
    {
      "title": "Authorisation",
      "description": "You must confirm that the company or partnership has authorised you to make this report.",
      "fields": [
        {
          "type": "choice",
          "id": "declaration",
          "label": "",
          "choices": [
            "I confirm that I am authorised to make this report and understand that I may commit a criminal offence if I give wrong information or include information that I don't honestly believe to be true."
          ],
          "mandatory": "yes",
          "errorMessage": "You must confirm that you have read and understand the declaration"
        }
      ]
    }
  ],
  "declarationSection": {
    "title": "Data protection",
    "fields": [
      {
        "id": "yourName",
        "type": "text",
        "label": "Name",
        "mandatory": "yes"
      },
      {
        "id": "yourRole",
        "type": "text",
        "label": "Role in the organisation",
        "mandatory": "yes"
      },
      {
        "id": "yourPhoneNumber",
        "type": "text",
        "label": "Phone",
        "mandatory": "yes",
        "helpText": "i.e +44, ect"
      },
      {
        "id": "email",
        "type": "text",
        "label": "Email Address",
        "format": "email",
        "mandatory": "yes"
      },
      {
        "id": "yourAddressGroup",
        "type": "group",
        "label": "Address",
        "fields": [
          {
            "id": "yourAddressLine",
            "type": "text",
            "label": "Address Line (optional)",
            "mandatory": "no"
          },
          {
            "id": "yourPostCode",
            "type": "text",
            "format": "shortText",
            "label": "Post code (optional)",
            "mandatory": "no"
          }
        ]
      },
      {
        "id": "declarationGroup",
        "type": "group",
        "label": "Declaration",
        "fields": [
          {
            "id": "declarationText",
            "type": "info",
            "label": "",
            "infoType": "noformat",
            "infoText": "I understand that I may commit a criminal offence if I give wrong information or include information that I don't honestly believe to be true."
          }
        ]
      }
    ]
  },
  "acknowledgementSection": {
    "shortName": "Acknowledgement Page",
    "title": "Acknowledgement Page",
    "fields": [
      {
        "id": "ackPageInfoTop",
        "type": "info",
        "infoType": "noformat",
        "label": "",
        "infoText": ""
      },
      {
        "id": "ackPageWarning",
        "type": "info",
        "infoType": "important",
        "label": "",
        "infoText": ""
      },
      {
        "type": "group",
        "id": "whatHappensNext",
        "label": "What happens next",
        "fields": []
      },
      {
        "type": "info",
        "id": "submissionInformation",
        "label": "",
        "infoText": "We recommend you keep the acknowledgement of completion and a copy of your self report for future reference. (new line) You may not hear again from an officer of HMRC for some time, or at all. HMRC may use information in your report to make a decision whether to start a criminal investigation, and might use evidence in your report in a prosecution or other court proceedings. Where the law permits, HMRC may also share the information in your self-report with other agencies."
      }
    ]
  }
}