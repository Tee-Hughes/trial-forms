  "sections": [
    {
      "title": "Business details",
      "fields": [
        {
          "id": "businessName",
          "type": "text",
          "label": "Business name"
        },
        {
          "id": "tradingName",
          "type": "text",
          "label": "Trading name (if you have one)",
          "mandatory": "false"
        },
        {
          "id": "businessAddress",
          "type": "address",
          "label": "Give the address of your principal place of business",
          "postcodeLookup": "no"
        },
        {
          "id": "businessPhone",
          "type": "text",
          "label": "Telephone number",
          "format": "telephoneNumber"
        },
        {
          "id": "mobilePhone",
          "type": "text",
          "label": "Mobile number",
          "format": "telephoneNumber"
        },
        {
          "id": "faxNumber",
          "type": "text",
