    {
      "title": "Is your business registered for VAT?",
      "includeIf": "${!multipleChoiceQuestion=4}",
      "fields": [
        {
          "id": "areYouVATRegistered",
          "type": "choice",
          "label": "",
          "shortName": "Business VAT registered",
          "helpText": "",
